<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container">
    <ui:with type="org.iplantc.core.widgets.client.WidgetDisplayStrings" field="display"/>             
             
    <con:FlowLayoutContainer>
        <con:child>
            <form:CheckBox ui:field="visible"
                           boxLabel="{display.displayInGui}"/>
        </con:child>
        <con:child>
            <form:CheckBox ui:field="required" 
                           boxLabel="{display.fieldRequiredLabel}"/>
        </con:child>
        <con:child>
            <form:CheckBox ui:field="omitIfBlank" 
                           boxLabel="{display.excludeArgumentOption}"/>
        </con:child>
        <con:child>
            <form:FieldLabel text="{display.label}">
                <form:widget>
                    <form:TextField ui:field="label"/>
                </form:widget>
            </form:FieldLabel>
        </con:child>
        <con:child>
            <form:FieldLabel text="{display.toolTipTextLabel}">
                <form:widget>
                    <form:TextField ui:field="description"/>
                </form:widget>
            </form:FieldLabel>
        </con:child>
        <con:child>
            <form:FieldLabel text="{display.argumentOrder}">
                <form:widget>
                    <form:SpinnerField ui:field="order"/>
                </form:widget>
            </form:FieldLabel>
        </con:child>
        <con:child>
            <form:FieldLabel text="{display.argumentOption}">
                <form:TextField ui:field="cmdLineOption"/>
            </form:FieldLabel>
        </con:child>
    </con:FlowLayoutContainer>
</ui:UiBinder> 