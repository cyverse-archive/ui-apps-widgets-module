<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
             xmlns:treeGrid="urn:import:com.sencha.gxt.widget.core.client.treegrid"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">
             
    <ui:with field="display"
             type="org.iplantc.core.resources.client.messages.IplantDisplayStrings"/>
    <ui:with field="res"
             type="org.iplantc.core.resources.client.IplantResources"/>
    
    <ui:with field="margins"
             type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="10"
                     right="0"
                     bottom="10"
                     left="0" />
    </ui:with>
    <ui:with field="fieldLayoutData"
             type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" >
        <ui:attributes width="1" 
                       height="-1"
                       margins="{margins}"/>
    </ui:with>
    <con:NorthSouthContainer ui:field="con">
        <con:north>
            <con:VerticalLayoutContainer>
                <con:child layoutData="{fieldLayoutData}">
		            <form:FieldLabel text="{display.checkCascadeLabel}"
		                             labelAlign="TOP">
		                <form:widget>
		                    <form:SimpleComboBox ui:field="cascadeOptionsCombo"
		                                         toolTip="{display.cascadeOptionsComboToolTip}"
		                                         triggerAction="ALL"
		                                         editable="false"/>
		                </form:widget>
		            </form:FieldLabel>
                </con:child>
        
                <con:child layoutData="{fieldLayoutData}">
		            <form:CheckBox ui:field="forceSingleSelectCheckBox"
		                           boxLabel="{display.forceSingleSelectLabel}"
		                           toolTip="{display.forceSingleSelectToolTip}"/>
                </con:child>
                
	        </con:VerticalLayoutContainer>
        </con:north>
        
        <con:south>
            <form:FieldLabel ui:field="treeGridLabel"
                             labelAlign="TOP">
                <form:widget>
		            <con:NorthSouthContainer>
		                <con:north>
				            <toolbar:ToolBar horizontalSpacing="4">
				                <toolbar:child>
				                    <button:TextButton ui:field="addGrpBtn"
				                                       icon="{res.folderAdd}"
				                                       toolTip="{display.addGroupToolTip}"/>
				                </toolbar:child>
				                <toolbar:child>
				                    <button:TextButton ui:field="addArgBtn"
				                                       icon="{res.add}"
				                                       toolTip="{display.addArgumentToolTip}"/>
				                </toolbar:child>
				                <toolbar:child>
				                    <button:TextButton ui:field="deleteBtn"
				                                       icon="{res.cancel}"
				                                       toolTip="{display.delete}"/>
				                </toolbar:child>
				            </toolbar:ToolBar>
		                </con:north>
		                <con:south>
				            <treeGrid:TreeGrid ui:field="treeGrid"/>
		                </con:south>
		            </con:NorthSouthContainer>
                </form:widget>
            </form:FieldLabel>
        </con:south>
    </con:NorthSouthContainer>
</ui:UiBinder>