<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
             xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">
             
    <ui:with field="display"
             type="org.iplantc.core.resources.client.messages.IplantDisplayStrings"/>
    <ui:with field="labels"
             type="org.iplantc.core.resources.client.uiapps.widgets.AppsWidgetsPropertyPanelLabels"/>
	<ui:with field="res"
		type="org.iplantc.core.resources.client.IplantResources" />
    <ui:with type="com.sencha.gxt.widget.core.client.grid.ColumnModel" 
             field="cm"/>
    <ui:with type="com.sencha.gxt.data.shared.ListStore" 
             field="selectionArgStore"/>
    <ui:with type="com.sencha.gxt.widget.core.client.grid.GridView" 
             field="view">
        <ui:attributes stripeRows="true" forceFit="true" autoFill="true"/>
    </ui:with>          
             
    <con:NorthSouthContainer ui:field="con">
       <con:north>
                <toolbar:ToolBar>        
                    <toolbar:child>
                        <button:TextButton ui:field="add" 
                                           text="{display.add}"
                                           icon = "{res.add}"/>
                    </toolbar:child>
                    <toolbar:child>
                        <button:TextButton ui:field="delete" 
                                           text="{display.delete}"
                                           icon = "{res.delete}"
                                           enabled="false"/>
                    </toolbar:child>
                </toolbar:ToolBar>
       </con:north>
       <con:south>
                <grid:Grid ui:field="grid" 
                           cm="{cm}" 
                           store="{selectionArgStore}" 
                           view="{view}"
                           toolTip="{labels.singleSelectEditToolTip}"/>
       </con:south>
    </con:NorthSouthContainer>         
</ui:UiBinder> 