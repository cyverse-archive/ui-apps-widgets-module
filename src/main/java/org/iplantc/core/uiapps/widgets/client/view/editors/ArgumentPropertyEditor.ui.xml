<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
	         xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
	         xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form">
    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="fieldLayoutData">
        <ui:attributes width="1" height="-1" />
    </ui:with>
    <ui:with field="margins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="5"
                     right="5"
                     bottom="5"
                     left="5" />
    </ui:with>
    <ui:with field="marginData"
             type="com.sencha.gxt.widget.core.client.container.MarginData">
       <ui:attributes margins="{margins}"/>
    </ui:with>
      <gxt:ContentPanel headingText="Properties">
        <gxt:child layoutData="{marginData}">
	    <con:VerticalLayoutContainer scrollMode="AUTOY"
	                                 adjustForScroll="true">
	        <con:child layoutData="{fieldLayoutData}">
	            <form:CheckBox ui:field="requiredEditor" 
	                           boxLabel="This field is required"/>
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <form:CheckBox ui:field="omitIfBlank" 
	                           boxLabel="Exclude Argument option when field is empty"/>
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <form:FieldLabel text="Argument label"
	                             labelAlign="TOP">
	                <form:widget>
	                    <form:TextField ui:field="label"/>
	                </form:widget>
	            </form:FieldLabel>
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <form:FieldLabel text="Tool tip text"
	                             labelAlign="TOP">
	                <form:widget>
	                    <form:TextField ui:field="description"/>
	                </form:widget>
	            </form:FieldLabel>
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <form:FieldLabel text="Argument option"
	                             labelAlign="TOP">
	                <form:widget>
	                    <form:TextField ui:field="cmdLineOption"/>
	                </form:widget>
	            </form:FieldLabel>
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <form:FieldLabel text="Argument order"
	                             labelAlign="TOP">
	                <form:widget>
	                    <form:SpinnerField ui:field="order"/>
	                </form:widget>
	            </form:FieldLabel>
	        </con:child>
	        
	        <!-- Field for ArgumentType.FileInput, FolderInput, MultiFileSelector -->
	        <con:child layoutData="{fieldLayoutData}">
	           <form:FieldLabel ui:field="fileTypeField" 
	                            text="Type of information contained in this file"
	                            labelAlign="TOP"
	                            enabled="false">
                    <form:widget>
                        <form:TextField text="PlaceHolder for file type information combobox"/>
                    </form:widget> 	                            
	           </form:FieldLabel>
	        </con:child>
	        
            <!-- Field for ArgumentType.Selection, TextSelection, ValueSelection -->
            <con:child layoutData="{fieldLayoutData}">
                    <form:FieldLabel ui:field="listSelectionField" 
                                     text="Create List"
                                     labelAlign="TOP"
                                     enabled="false">
                        <form:widget>
                            <form:TextField text="PlaceHolder for list selection creation widget" />
                        </form:widget>
                    </form:FieldLabel>
            </con:child>

	        <!-- Field for ArgumentType.Flag -->
	        <con:child layoutData="{fieldLayoutData}">
                <form:FieldLabel ui:field="flagField" 
                                 text="Default State"
                                 labelAlign="TOP"
                                 enabled="false">
                    <form:widget>
                        <form:TextField text="PlaceHolder for combo box" />
                    </form:widget>
                </form:FieldLabel>
            </con:child>
            
	    </con:VerticalLayoutContainer>
	    </gxt:child>
	 </gxt:ContentPanel>

</ui:UiBinder> 