<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
	         xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
	         xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
	         xmlns:wizEditor="urn:import:org.iplantc.core.uiapps.widgets.client.view.editors.properties"
	         xmlns:validation="urn:import:org.iplantc.core.uiapps.widgets.client.view.editors.validation"
	         xmlns:lists="urn:import:org.iplantc.core.uiapps.widgets.client.view.editors.properties.lists"
	         xmlns:trees="urn:import:org.iplantc.core.uiapps.widgets.client.view.editors.properties.trees"
	         xmlns:fields="urn:import:org.iplantc.core.uiapps.widgets.client.view.fields"
	         >
    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="fieldLayoutData">
        <ui:attributes width="1" height="-1" />
    </ui:with>
    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="fieldLayoutData_END">
        <ui:attributes width="1" height="1" />
    </ui:with>
 
    <ui:with field="margins"
            type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="5"
                     right="5"
                     bottom="5"
                     left="5" />
    </ui:with>
    <ui:with field="marginData"
             type="com.sencha.gxt.widget.core.client.container.MarginData">
       <ui:attributes margins="{margins}"/>
    </ui:with>
      <gxt:ContentPanel headingText="Properties">
        <gxt:child layoutData="{marginData}">
	    <con:VerticalLayoutContainer ui:field="con" 
	                                 scrollMode="AUTOY"
	                                 adjustForScroll="true">
	        <con:child layoutData="{fieldLayoutData}">
	            <form:FieldLabel ui:field="argLabelLabel" 
	                             text="Label"
	                             labelAlign="TOP">
	                <form:widget>
	                    <form:TextField ui:field="label"/>
	                </form:widget>
	            </form:FieldLabel>
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <form:FieldLabel ui:field="nameLabel"
	                             text="Command line option"
	                             labelAlign="TOP">
	                <form:widget>
	                    <form:TextField ui:field="name"/>
	                </form:widget>
	            </form:FieldLabel>
	        </con:child>
	        
		    <!-- DefaultValue Editors -->
	        <con:child layoutData="{fieldLayoutData}">
	           <wizEditor:DefaultArgumentValueEditor ui:field="defaultValue"/>
	        </con:child>
		    <con:child layoutData="{fieldLayoutData}">
	           <form:FieldLabel text="Default Value"
	                            ui:field="selectionItemDefaultValueLabel"
                                labelAlign="TOP">
                    <form:widget>
			           <fields:AppWizardComboBox ui:field="selectionItemDefaultValue"/>
                    </form:widget>
                                 
               </form:FieldLabel>
	        </con:child>                

	        <con:child layoutData="{fieldLayoutData}">
	            <form:CheckBox ui:field="visible" 
	                           boxLabel="Display in GUI"/>
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <form:CheckBox ui:field="requiredEditor" 
	                           boxLabel="This field is required"/>
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <form:CheckBox ui:field="omitIfBlank" 
	                           boxLabel="Exclude Argument when empty"/>
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <form:FieldLabel ui:field="descriptionLabel" 
	                             text="Tool tip text"
	                             labelAlign="TOP">
	                <form:widget>
	                    <form:TextField ui:field="description"
	                                    emptyText="Enter tooltip here"/>
	                </form:widget>
	            </form:FieldLabel>
	        </con:child>
        


	        <!-- Argument Validator Editor -->
	        <con:child layoutData="{fieldLayoutData_END}">
	           <validation:ArgumentValidatorEditor ui:field="validatorsEditor"/>
	        </con:child>
	        

	        <con:child layoutData="{fieldLayoutData_END}">
	           <lists:SelectionItemPropertyEditor ui:field="selectionItemListEditor"/>
	        </con:child>
	        
	        <con:child layoutData="{fieldLayoutData_END}">
	           <trees:SelectionItemTreePropertyEditor ui:field="selectionItemTreeEditor"/>
	        </con:child>
            
	    </con:VerticalLayoutContainer>
	    </gxt:child>
	 </gxt:ContentPanel>

</ui:UiBinder> 