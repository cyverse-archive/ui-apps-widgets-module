<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
	         xmlns:con="urn:import:com.sencha.gxt.widget.core.client.container"
	         xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
	         xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
	         xmlns:wizEditor="urn:import:org.iplantc.core.uiapps.widgets.client.view.editors.properties"
	         xmlns:validation="urn:import:org.iplantc.core.uiapps.widgets.client.view.editors.properties.validation"
	         xmlns:lists="urn:import:org.iplantc.core.uiapps.widgets.client.view.editors.properties.lists"
	         xmlns:trees="urn:import:org.iplantc.core.uiapps.widgets.client.view.editors.properties.trees"
	         xmlns:fields="urn:import:org.iplantc.core.uiapps.widgets.client.view.fields">
	<ui:with field="labels"
             type="org.iplantc.core.resources.client.uiapps.widgets.AppsWidgetsPropertyPanelLabels" /> 
    <ui:with field="margins"
             type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="10"
                     right="5"
                     bottom="10"
                     left="5" />
    </ui:with>
    <ui:with field="marginsBottom"
             type="com.sencha.gxt.core.client.util.Margins">
      <ui:attributes top="0"
                     right="5"
                     bottom="0"
                     left="5" />
    </ui:with>
    <ui:with field="fieldLayoutData"
             type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" >
        <ui:attributes width="1" 
                       height="-1" 
                       margins="{margins}"/>
    </ui:with>
    <ui:with field="fieldLayoutData_END"
             type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData">
        <ui:attributes width="1" 
                       height="1"
                       margins="{marginsBottom}"/>
    </ui:with>
 
    <gxt:ContentPanel ui:field="cp">
	    <con:VerticalLayoutContainer ui:field="con" 
	                                 scrollMode="AUTOY"
	                                 adjustForScroll="true">
	        <con:child layoutData="{fieldLayoutData}">
	            <form:FieldLabel ui:field="argLabelLabel" 
	                             labelAlign="TOP">
	                <form:widget>
	                    <form:TextField ui:field="label"/>
	                </form:widget>
	            </form:FieldLabel>
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <form:FieldLabel ui:field="nameLabel"
	                             labelAlign="TOP">
	                <form:widget>
	                    <form:TextField ui:field="name"
	                                    emptyText="{labels.argumentOptionEmptyText}"/>
	                </form:widget>
	            </form:FieldLabel>
	        </con:child>
	        
	        <con:child layoutData="{fieldLayoutData}">
                <fields:CheckBoxAdapter ui:field="isImplicit" />
            </con:child>
	        
		    <!-- DefaultValue Editors -->
	        <con:child layoutData="{fieldLayoutData}">
	           <wizEditor:DefaultArgumentValueEditor ui:field="defaultValue"/>
	        </con:child>
		    <con:child layoutData="{fieldLayoutData}">
	           <form:FieldLabel ui:field="selectionItemDefaultValueLabel"
                                labelAlign="TOP">
                    <form:widget>
			           <fields:AppWizardComboBox ui:field="selectionItemDefaultValue"/>
                    </form:widget>
                                 
               </form:FieldLabel>
	        </con:child>                

	        <con:child layoutData="{fieldLayoutData}">
	            <fields:CheckBoxAdapter ui:field="doNotDisplay"
	                                    negated="true"/>
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <fields:CheckBoxAdapter ui:field="requiredEditor"/>
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <fields:CheckBoxAdapter ui:field="omitIfBlank" />
	        </con:child>
	        <con:child layoutData="{fieldLayoutData}">
	            <form:FieldLabel ui:field="descriptionLabel" 
	                             labelAlign="TOP">
	                <form:widget>
	                    <form:TextField ui:field="description"
	                                    emptyText="{labels.toolTipEmptyText}"/>
	                </form:widget>
	            </form:FieldLabel>
	        </con:child>
	        
	        <con:child layoutData="{fieldLayoutData}">
                <form:FieldLabel ui:field="dataSourceLabel" 
                                 labelAlign="TOP">
                    <form:widget>
                        <form:ComboBox ui:field="dataSourceComboBox"/>
                    </form:widget>
                </form:FieldLabel>
            </con:child>
            
	        <con:child layoutData="{fieldLayoutData}">
	            <form:FieldLabel ui:field="fileInfoTypeLabel" 
                                 labelAlign="TOP">
                    <form:widget>
                        <form:ComboBox ui:field="fileInfoTypeComboBox"/>
                    </form:widget>
                </form:FieldLabel>
	        </con:child>

	        <!-- Argument Validator Editor -->
	        <con:child layoutData="{fieldLayoutData_END}">
	           <validation:ArgumentValidatorEditor ui:field="validatorsEditor"/>
	        </con:child>

	        <con:child layoutData="{fieldLayoutData}">
	           <button:TextButton ui:field="editSimpleListBtn"
	           					  text="{labels.singleSelectionCreateLabel}"/>
	        </con:child>
	        
	        <con:child layoutData="{fieldLayoutData}">
			 	<button:TextButton ui:field="editTreeListBtn"
			 				       text="{labels.treeSelectionCreateLabel}"/> 
	        </con:child>
            
	    </con:VerticalLayoutContainer>
	 </gxt:ContentPanel>

</ui:UiBinder> 